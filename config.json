{
    "source": ["tokens/**/*.json"],
    "platforms": {
      "web": {
        "transformGroup": "scss",
        "buildPath": "build/web/",
        "files": [
          {
            "destination": "variables.scss",
            "format": "scss/variables"
          }
        ]
      },
      "ios": {
        "transformGroup": "ios",
        "buildPath": "build/ios/",
        "files": [
          {
            "destination": "tokens.h",
            "format": "ios/macros"
          }
        ]
      },
      "android": {
        "transformGroup": "android",
        "buildPath": "build/android/",
        "files": [
          {
            "destination": "tokens.xml",
            "format": "android/resources"
          }
        ]
      }
    }
  }
  